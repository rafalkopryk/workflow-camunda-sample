@using MudBlazor;

<MudGrid>
    <MudItem xs="12">
        <MudText Typo="Typo.h6">Personal data</MudText>
    </MudItem>
</MudGrid>
<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudTextField Variant="Variant.Outlined"
                      Immediate="true"
                      Label="FirstName"
                      @bind-Value="@CreditApplication.CustomerPersonalData.FirstName" />
    </MudItem>
    <MudItem xs="12" sm="6" md="4">

        <MudTextField Variant="Variant.Outlined"
                      Immediate="true"
                      Label="LastName"
                      @bind-Value="@CreditApplication.CustomerPersonalData.LastName" />
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudTextField Variant="Variant.Outlined"
                      Immediate="true"
                      Label="DocumentId"
                      @bind-Value="@CreditApplication.CustomerPersonalData.DocumentId" />
    </MudItem>
</MudGrid>

@code {
    [Parameter]
    public IWithCustomerPersonal CreditApplication { get; init; }
}
